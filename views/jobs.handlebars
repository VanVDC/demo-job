<section id="jobs" class="container">
    <h1>All Jobs</h1>

    {{#each jobs}}
      <div class="gig">
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <ul>
        <li>salary: {{budget}}</li>
        <li><a href="mailto:{{contact_email}}" class="btn btn-reverse">Email Now</a></li>
      </ul>
      <div class="tech">
        <small>Technologies Needed: <span>{{technologies}}</span></small>
      </div>
    </div>
    {{else}}
      <p>No Jobs available</p>
    {{/each}}
    
  </section>